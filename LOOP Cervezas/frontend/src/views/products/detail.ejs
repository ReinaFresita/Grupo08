<%- include("../partials/head", {title: 'LOOP - Detalle Producto'}) %>

<body>
    <%- include("../partials/header") %>

    <main>
        <h1 class="main-titulo">DETALLE DE PRODUCTO</h1>

        <div style="position:absolute;padding:10px 30px;margin:20px">
            <a href="/products/" style="background-color: white;font-size: 1.3em;font-weight: bold; color: black; text-decoration: none;padding: 5px;">
              <i class="fas fa-angle-left"></i> VOLVER
            </a>
          </div>

            <div style="background-color: white;margin: 20px auto; width: 500px;text-align: center;padding: 10px;">
                <h2>Nombre: <%= product.name %></h2>
                <img src="<%= product.image %>" width="300px" alt="">
                <h2>Precio: $<%= product.price %></h2>
                <p><%= product.description %></p>
            </div>
        
    </main>

    <%- include("../partials/footer") %>

</body>
</html>